AC_CONFIG_SRCDIR([src/gui/base.cc])
AC_CONFIG_HEADER([src/utils/aconf.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC
AC_PROG_MAKE_SET
AC_PROG_RANLIB

